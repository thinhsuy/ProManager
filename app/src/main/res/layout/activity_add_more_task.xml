<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:flexDirection="column"
    app:justifyContent="center"
    app:alignItems="center"
    android:paddingTop="80px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:id="@+id/content_container"
    tools:context=".AddMoreTaskActivity">
    <ScrollView
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:paddingTop="25px"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.flexbox.FlexboxLayout
                app:flexDirection="column"
                android:backgroundTint="@color/white_gray"
                android:background="@drawable/border_radius_stroke_box"
                android:paddingLeft="80px"
                android:paddingRight="80px"
                android:paddingTop="70px"
                android:paddingBottom="70px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:justifyContent="flex_start"
                    android:layout_marginBottom="25px">
                    <TextView
                        android:id="@+id/back_btn"
                        android:layout_width="250px"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:padding="35px"
                        android:text="Back"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="40px"/>
                </com.google.android.flexbox.FlexboxLayout>
                <TextView
                    android:id="@+id/name_textview"
                    android:textSize="70px"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark_deep"
                    android:layout_marginTop="50px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Project Name"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/total_acts_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total current activities: 5"
                    android:textSize="50px"
                    android:textColor="@color/primary_dark_deep"
                    android:textAlignment="center"
                    android:layout_marginTop="40px">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_form"
                    android:orientation="vertical"
                    android:layout_marginTop="40px"
                    android:gravity="center">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity Name"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginTop="50px"
                        android:layout_marginBottom="20px"
                        android:textSize="40px"/>

                    <com.google.android.material.textfield.TextInputLayout
                        app:endIconMode="clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50px">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textColor="@color/white"
                            android:background="@drawable/border_radius_stroke_box"
                            android:id="@+id/activity_name_textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity Management"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginTop="50px"
                        android:layout_marginBottom="20px"
                        android:textSize="40px"/>
                    <com.google.android.material.textfield.TextInputLayout
                        app:endIconMode="clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50px">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textColor="@color/white"
                            android:background="@drawable/border_radius_stroke_box"
                            android:id="@+id/manager_textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity Deadline"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginTop="50px"
                        android:layout_marginBottom="20px"
                        android:textSize="40px"/>
                    <com.google.android.material.textfield.TextInputLayout
                        app:endIconMode="clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50px">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textColor="@color/white"
                            android:background="@drawable/border_radius_stroke_box"
                            android:id="@+id/deadline_textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity Describe"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginTop="50px"
                        android:layout_marginBottom="20px"
                        android:textSize="40px"/>
                    <com.google.android.material.textfield.TextInputLayout
                        app:endIconMode="clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50px">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textColor="@color/white"
                            android:background="@drawable/border_radius_stroke_box"
                            android:id="@+id/description_textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_marginTop="80px"
                        android:layout_marginRight="50px"
                        android:layout_marginBottom="80px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:justifyContent="flex_end">
                        <TextView
                            android:id="@+id/confirm_btn"
                            android:layout_width="350px"
                            android:layout_height="wrap_content"
                            android:background="@drawable/submit_button"
                            android:padding="25px"
                            android:text="Confirm"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="40px"/>
                    </com.google.android.flexbox.FlexboxLayout>
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
    </ScrollView>
</com.google.android.flexbox.FlexboxLayout>
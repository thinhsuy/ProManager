<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:justifyContent="center"
    app:alignItems="center"
    android:paddingTop="80px"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary"
    tools:context=".NotificationActivity">

    <com.google.android.flexbox.FlexboxLayout
        app:flexDirection="column"
        android:backgroundTint="@color/white_gray"
        android:background="@drawable/border_radius_stroke_box"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:paddingTop="40px"
        android:paddingBottom="70px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:justifyContent="space_between"
            android:paddingVertical="50px"
            android:layout_marginBottom="15px">
            <TextView
                android:layout_width="450px"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_deep"
                android:text="Notifications"
                android:textStyle="bold"
                android:textSize="60px"/>
            <TextView
                android:layout_width="60px"
                android:layout_height="60px"
                app:layout_alignSelf="center"
                android:background="@drawable/button"
                android:padding="35px"
                android:layout_marginRight="20px"
                android:textColor="@color/primary_dark_deep"/>
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:textSize="50px"
            android:textColor="@color/white"
            android:background="@drawable/border_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingVertical="30px"
            android:text="Check Project Request"
            />

        <TextView
            android:textSize="50px"
            android:layout_marginTop="50px"
            android:textColor="@color/primary_dark_deep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="50px"
            android:paddingHorizontal="20px"
            android:text="Architecture Definition hạn là 14/12/2022 lúc 20:00."
            android:background="@color/light_purple"
            />
    </com.google.android.flexbox.FlexboxLayout>
</com.google.android.flexbox.FlexboxLayout>
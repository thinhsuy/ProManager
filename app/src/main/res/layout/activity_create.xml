<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="80px"
    app:justifyContent="center"
    app:alignItems="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".CreateActivity">


    <com.google.android.flexbox.FlexboxLayout
        app:flexDirection="column"
        android:backgroundTint="@color/white_gray"
        android:background="@drawable/border_radius_stroke_box"
        android:paddingLeft="80px"
        android:paddingRight="80px"
        android:paddingTop="70px"
        android:paddingBottom="70px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.flexbox.FlexboxLayout
            app:justifyContent="space_between"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/back_btn"
                android:layout_height="120px"
                android:layout_width="230px"
                android:text="Back"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/button"/>
            <TextView
                android:id="@+id/confirm_btn"
                android:layout_height="120px"
                android:layout_width="250px"
                android:text="Confirm"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/button"/>
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/hoster_textview"
            android:textSize="50px"
            android:textColor="@color/black"
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Generate a new project" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="25px"
            app:endIconMode="clear_text"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:hint="Project Name"
            app:boxStrokeColor="#98A8F8">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/project_name_textInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="25px"
            app:endIconMode="clear_text"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:hint="Project Deadline"
            app:boxStrokeColor="#98A8F8">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/project_deadline_textInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="25px"
            app:endIconMode="clear_text"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:hint="Project Describe"
            app:boxStrokeColor="#98A8F8">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/project_describe_textInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.flexbox.FlexboxLayout>
</com.google.android.flexbox.FlexboxLayout>
